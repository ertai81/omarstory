<Window x:Class="OmarStory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:OmarStory.Views"
        Title="Omar's Story" Height="768" Width="1000" Loaded="Window_Loaded_1" KeyUp="AnyKeyPressed" MouseLeftButtonUp="Window_MouseLeftButtonUp_1" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="Resources/OS.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" x:Name="MainGrid">
            <views:GeneralView />
        </Grid>
        
        <Grid Grid.Row="1" x:Name="FooterGrid">
            <views:FooterGeneralView />
        </Grid>
    </Grid>
</Window>
